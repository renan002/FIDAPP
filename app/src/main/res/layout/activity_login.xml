<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".activities.LoginActivity">

    <ImageView
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_width="315dp"
            android:layout_height="204dp"
            android:contentDescription="@string/imagemLogo"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/loginCPF"
            android:inputType="number"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/digiteCPF"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent" android:autofillHints="@string/digiteCPF"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/digiteSenha"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/loginCPF" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:autofillHints="@string/digiteSenha"/>
    <TextView
            android:text="@string/bemvindoFID"
            android:textSize="40sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BemVindo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <Button
            android:text="@string/logar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/logarButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <TextView
            android:layout_width="196dp"
            android:layout_height="33dp"
            android:id="@+id/esqueceuSenha"
            android:text="@string/esqueceuSenha"
            app:layout_constraintTop_toBottomOf="@+id/logarButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:textAlignment="center"/>
    <TextView
            android:text="@string/cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/cadastrar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/esqueceuSenha"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>