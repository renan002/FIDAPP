<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_cadastro"
        tools:context=".activities.CadastroActivity">

    <ImageView
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_width="315dp"
            android:layout_height="204dp"
            android:contentDescription="@string/imagemLogo"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:hint="@string/cadastrarNome"
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:id="@+id/cadastroNome"
            android:textSize="21sp"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text" tools:ignore="Autofill"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="240dp"
            android:hint="@string/cadastrarDataNasc"
            android:layout_height="46dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/cadastroDataNasc"
            android:textSize="21sp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/cadastroNome" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" tools:ignore="Autofill" android:layout_marginTop="15dp"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:hint="@string/cadastrarEmail"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textSize="21sp"
            android:id="@+id/cadastroEmail"
            android:textAlignment="center" tools:ignore="Autofill"
            app:layout_constraintTop_toBottomOf="@+id/cadastroDataNasc" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/cadastroCPF"
            android:textAlignment="center" android:textSize="21sp"
            android:hint="@string/cadastrarCPF" tools:ignore="Autofill"
            app:layout_constraintTop_toBottomOf="@+id/cadastroEmail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"/>
    <EditText
            android:layout_width="240dp"
            android:layout_height="46dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/cadastrarSenha"
            android:id="@+id/cadastroSenha"
            android:textAlignment="center" android:textSize="21sp" tools:ignore="Autofill"
            app:layout_constraintTop_toBottomOf="@+id/cadastroCPF" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"/>
    <Button
            android:text="@string/cadastrarBotao"

            android:layout_width="250dp"
            android:id="@+id/cadastroBotao"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>