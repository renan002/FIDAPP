<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".activities.SplashScreenActivity">

    <ImageView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_fid"
            android:id="@+id/Logo_do_APP"
            android:layout_weight="1" android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="@+id/carregando"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="@string/carregando"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/carregando" android:textSize="25sp"
            android:textAlignment="center" android:layout_marginBottom="8dp"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>