<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_adicionar_evento"
        tools:context=".activities.AdicionarEventoActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/codEvent" android:textColor="#000"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="144dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/editTextCodEvento" android:importantForAutofill="no" android:textAlignment="center"/>
    <Button
            android:text="@string/adicionar"
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdicionarEvento"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextCodEvento" app:layout_constraintHorizontal_bias="0.497"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/buttonAdicionarEvento"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            android:id="@+id/formEvento" android:visibility="invisible">
        <TextView
                android:layout_width="match_parent" android:text="@string/eventName" android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/textViewNomeEvento" android:textSize="20sp"/>
        <TextView
                android:layout_width="match_parent" android:text="@string/eventDateInit"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/textViewDataIncio" android:textSize="20sp"/>
        <TextView
                android:layout_width="match_parent" android:text="@string/eventDateEnd"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/textViewDataFim" android:textSize="20sp"/>
        <TextView
                android:layout_width="match_parent" android:text="@string/eventPrice" android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/textViewPreco" android:textSize="20sp"/>
    </LinearLayout>
    <TextView
            android:text="@string/obsAdicionarEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>